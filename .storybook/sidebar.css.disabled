/* Alternative selectors for different Storybook versions */
.sidebar-container .os-host {
  height: 100% !important;
}

.sidebar-container .os-content {
  height: 100% !important;
  overflow-y: auto !important;
}

/* Story list container */
[data-testid="story-list"] {
  padding: 0 !important;
}

/* Story items */
[data-testid="story-list"] > div {
  margin-bottom: 4px !important;
}

/* Collapsible story groups */
[data-testid="story-list"] [role="button"] {
  padding: 8px 12px !important;
  border-radius: 6px !important;
  transition: all 0.2s ease !important;
}

[data-testid="story-list"] [role="button"]:hover {
  background: #f0f0f0 !important;
}

/* Selected story */
[data-testid="story-list"] [aria-selected="true"] {
  background: #ea580c !important;
  color: white !important;
}

/* Story group headers */
[data-testid="story-list"] h3 {
  font-size: 12px !important;
  font-weight: 600 !important;
  text-transform: uppercase !important;
  letter-spacing: 0.5px !important;
  color: #737373 !important;
  margin: 16px 0 8px 0 !important;
  padding: 0 12px !important;
}

/* Search input styling */
[data-testid="sidebar-root"] input[type="search"],
[data-testid="sidebar-root"] input[placeholder*="Search"] {
  width: 100% !important;
  padding: 8px 12px !important;
  border: 1px solid #e5e5e5 !important;
  border-radius: 6px !important;
  background: white !important;
  font-size: 14px !important;
  transition: border-color 0.2s ease !important;
}

[data-testid="sidebar-root"] input[type="search"]:focus,
[data-testid="sidebar-root"] input[placeholder*="Search"]:focus {
  outline: none !important;
  border-color: #ea580c !important;
  box-shadow: 0 0 0 2px rgba(234, 88, 12, 0.1) !important;
}

/* Brand logo area */
[data-testid="sidebar-root"] img,
[data-testid="sidebar-root"] svg {
  max-height: 32px !important;
  width: auto !important;
}

/* Custom scrollbar for sidebar */
.sb-bar .os-content > div:last-child::-webkit-scrollbar,
[data-testid="sidebar-root"] > div:last-child::-webkit-scrollbar {
  width: 6px;
}

.sb-bar .os-content > div:last-child::-webkit-scrollbar-track,
[data-testid="sidebar-root"] > div:last-child::-webkit-scrollbar-track {
  background: transparent;
}

.sb-bar .os-content > div:last-child::-webkit-scrollbar-thumb,
[data-testid="sidebar-root"] > div:last-child::-webkit-scrollbar-thumb {
  background: #d4d4d4;
  border-radius: 3px;
}

.sb-bar .os-content > div:last-child::-webkit-scrollbar-thumb:hover,
[data-testid="sidebar-root"] > div:last-child::-webkit-scrollbar-thumb:hover {
  background: #a3a3a3;
}

