/* Fixed sidebar header and scrollable content for Storybook 9.x */

/* Target the main sidebar container */
[data-testid="sidebar-root"],
.sb-bar,
.sidebar-container {
  display: flex !important;
  flex-direction: column !important;
  height: 100vh !important;
  overflow: hidden !important;
}

/* Target the sidebar content wrapper */
[data-testid="sidebar-root"] > div,
.sb-bar > div,
.sidebar-container > div {
  display: flex !important;
  flex-direction: column !important;
  height: 100% !important;
  overflow: hidden !important;
}

/* Fixed header area - brand logo and title */
[data-testid="sidebar-root"] > div > div:first-child,
.sb-bar > div > div:first-child,
.sidebar-container > div > div:first-child {
  position: sticky !important;
  top: 0 !important;
  z-index: 10 !important;
  background: #fafafa !important;
  border-bottom: 1px solid #e5e5e5 !important;
  flex-shrink: 0 !important;
  padding: 16px !important;
}

/* Fixed search bar area */
[data-testid="sidebar-root"] > div > div:nth-child(2),
.sb-bar > div > div:nth-child(2),
.sidebar-container > div > div:nth-child(2) {
  position: sticky !important;
  top: 80px !important;
  z-index: 9 !important;
  background: #fafafa !important;
  border-bottom: 1px solid #e5e5e5 !important;
  flex-shrink: 0 !important;
  padding: 12px 16px !important;
}

/* Scrollable content area - story list */
[data-testid="sidebar-root"] > div > div:last-child,
.sb-bar > div > div:last-child,
.sidebar-container > div > div:last-child {
  flex: 1 !important;
  overflow-y: auto !important;
  overflow-x: hidden !important;
  padding: 16px !important;
}

